---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TideTrack Pro</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    </style>
</head>
<body class="bg-slate-50 text-slate-800 min-h-screen p-3 md:p-8 flex justify-center items-start">

    <div class="w-full max-w-4xl bg-white min-h-[90vh] rounded-[2.5rem] shadow-2xl border-4 border-white ring-1 ring-slate-900/5 overflow-hidden flex flex-col">
        
        <header class="px-8 pt-10 pb-6 bg-white flex justify-between items-center border-b border-slate-100/50">
            <div>
                <h1 class="text-3xl font-black text-slate-900 tracking-tighter">
                    Tide<span class="text-blue-600">Track</span>
                </h1>
                <div class="flex items-center gap-2 mt-1">
                    <span class="relative flex h-2 w-2">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-orange-500"></span>
                    </span>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">
                        Live Dashboard
                    </p>
                </div>
            </div>
            <div class="text-right">
                <div id="clock" class="text-xl font-mono font-bold text-slate-600 tracking-tight">--:--</div>
            </div>
        </header>

        <main class="flex-1 bg-slate-50/50 p-4 md:p-8">
            <div id="grid" class="grid grid-cols-1 gap-6">
                <div id="status" class="py-20 text-center flex flex-col items-center justify-center opacity-60">
                    <div class="h-8 w-8 border-4 border-blue-600 border-t-transparent rounded-full animate-spin mb-4"></div>
                    <p class="text-sm font-bold text-slate-400 uppercase tracking-wide">Calculating Predictions...</p>
                </div>
            </div>
        </main>

        <footer class="px-6 py-6 bg-slate-50 border-t border-slate-100 flex flex-col items-center gap-6">
            <button onclick="window.location.reload()" class="group relative px-6 py-3 font-bold text-white transition-all duration-200 bg-slate-900 rounded-full hover:bg-blue-600 shadow-lg hover:shadow-blue-500/30 active:scale-95 text-sm">
                Refresh Dashboard
            </button>
            <div class="text-[10px] leading-relaxed text-center text-slate-400 max-w-sm mx-auto pt-2">
                <p>
                    <span class="inline-block w-2 h-2 rounded-full bg-orange-500 mr-1"></span>Now 
                    <span class="inline-block w-2 h-2 rounded-full bg-slate-900 ml-2 mr-1"></span>Next Event
                </p>
                <p class="mt-2 text-slate-300">EDUCATIONAL USE ONLY. NOT FOR NAVIGATION.</p>
            </div>
        </footer>
    </div>

    <script>
        setInterval(() => {
            document.getElementById('clock').innerText = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        }, 1000);

        async function init() {
            try {
                const res = await fetch('/api/tide-data');
                const container = document.getElementById('grid');
                if (!res.ok) throw new Error("Server Unavailable");
                const fullData = await res.json();
                container.innerHTML = ''; 

                fullData.forEach((station, i) => {
                    if (station.error || !station.predictions || station.predictions.length === 0) {
                        container.innerHTML += `<div class="p-6 bg-red-50 text-red-500 rounded-2xl text-center">⚠️ ${station.name} Unavailable</div>`;
                        return;
                    }

                    // --- 1. SLICING THE DATA (THE WINDOW) ---
                    const now = new Date();
                    // Find the index closest to current time
                    let rawNowIndex = 0;
                    let minDiff = Infinity;
                    station.predictions.forEach((p, idx) => {
                        const pDate = new Date(p.t.replace(/-/g, '/')); 
                        const diff = Math.abs(now - pDate);
                        if (diff < minDiff) { minDiff = diff; rawNowIndex = idx; }
                    });

                    // Define the window: 4 hours back, 48 hours forward
                    const startIdx = Math.max(0, rawNowIndex - 4);
                    const endIdx = Math.min(station.predictions.length, rawNowIndex + 48);
                    
                    // Create the display subset
                    const subset = station.predictions.slice(startIdx, endIdx);
                    
                    // Re-calculate "Now" index relative to this new small list
                    // It will usually be index 4 (since we stepped back 4)
                    const displayNowIndex = rawNowIndex - startIdx;

                    // --- 2. FIND THE NEXT BIG EVENT (BLACK DOT) ---
                    let nextEventIndex = -1;
                    // Scan forward from Now
                    for (let j = displayNowIndex + 1; j < subset.length - 1; j++) {
                        const prev = subset[j-1].v;
                        const curr = subset[j].v;
                        const next = subset[j+1].v;
                        // Is it a Peak OR a Valley?
                        if ((curr > prev && curr > next) || (curr < prev && curr < next)) {
                            nextEventIndex = j;
                            break; // Stop at the very first one we find
                        }
                    }

                    const labels = subset.map(p => p.t);
                    const values = subset.map(p => p.v);
                    const high = Math.max(...values);
                    const low = Math.min(...values);

                    // --- RENDER ---
                    const card = document.createElement('div');
                    card.className = 'bg-white rounded-3xl p-6 shadow-[0_8px_30px_rgb(0,0,0,0.04)] border border-slate-100 relative';
                    
                    // Dynamic Header Text
                    let nextEventText = "Calculating...";
                    if (nextEventIndex !== -1) {
                         const eVal = values[nextEventIndex];
                         const eType = eVal > values[nextEventIndex-1] ? "High Tide" : "Low Tide";
                         const timeParts = labels[nextEventIndex].split(' ')[1].split(':');
                         const h = parseInt(timeParts[0]);
                         const displayTime = `${h % 12 || 12}:${timeParts[1]} ${h>=12?'PM':'AM'}`;
                         nextEventText = `Next ${eType} at ${displayTime}`;
                    }

                    card.innerHTML = `
                        <div class="flex justify-between items-end mb-4">
                            <h2 class="text-xl font-bold text-slate-800">${station.name}</h2>
                            <p class="text-xs font-bold text-slate-500 bg-slate-100 px-3 py-1 rounded-full">${nextEventText}</p>
                        </div>
                        <div class="relative h-64 w-full">
                            <canvas id="c-${i}"></canvas>
                        </div>
                    `;
                    container.appendChild(card);

                    const ctx = document.getElementById(`c-${i}`);
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                data: values,
                                borderWidth: 3,
                                tension: 0.4,
                                fill: true,
                                backgroundColor: 'rgba(37, 99, 235, 0.04)',
                                
                                // GRAY PAST / BLUE FUTURE
                                segment: {
                                    borderColor: ctx => ctx.p0DataIndex < displayNowIndex ? 'rgba(148, 163, 184, 0.3)' : '#2563eb',
                                    borderDash: ctx => ctx.p0DataIndex < displayNowIndex ? [4, 4] : undefined,
                                },

                                // DOT LOGIC
                                pointRadius: (c) => {
                                    const idx = c.dataIndex;
                                    const v = c.dataset.data[idx];
                                    
                                    if (idx === displayNowIndex) return 8; // ORANGE (Now)
                                    if (idx === nextEventIndex) return 8;  // BLACK (Next Event)
                                    if (v === high || v === low) return 5; // BLUE (Future Peaks)
                                    return 0;
                                },
                                pointBackgroundColor: (c) => {
                                    const idx = c.dataIndex;
                                    if (idx === displayNowIndex) return '#f97316'; // Orange
                                    if (idx === nextEventIndex) return '#0f172a'; // Black
                                    if (idx < displayNowIndex) return '#cbd5e1';   // Gray
                                    return '#2563eb'; // Blue
                                },
                                pointBorderColor: '#fff',
                                pointBorderWidth: 3,
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: { mode: 'index', intersect: false },
                            plugins: { legend: { display: false } },
                            scales: {
                                x: {
                                    type: 'category',
                                    grid: { display: false },
                                    ticks: {
                                        maxTicksLimit: 7,
                                        color: (c) => c.index === displayNowIndex ? '#f97316' : '#94a3b8',
                                        font: (c) => c.index === displayNowIndex ? {weight:'bold'} : {size:11},
                                        callback: function(val, index) {
                                            if (index === displayNowIndex) return "NOW";
                                            // Don't show label for the Black Dot to prevent overlap clutter
                                            if (index === nextEventIndex) return ""; 
                                            
                                            const label = this.getLabelForValue(val);
                                            const time = label.split(' ')[1];
                                            const h = parseInt(time.split(':')[0]);
                                            return `${h % 12 || 12}${h >= 12 ? 'pm' : 'am'}`;
                                        }
                                    }
                                },
                                y: { display: false, suggestedMin: low - 1, suggestedMax: high + 1 }
                            }
                        }
                    });
                });
            } catch (err) { console.error(err); }
        }
        init();
    </script>
</body>
</html>