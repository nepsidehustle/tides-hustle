---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <title>TideTrack Card View</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
        body { 
            font-family: 'Outfit', sans-serif; 
            background-color: #f0f2f5; /* Ferry App Grey */
        }
        /* Hide Scrollbar */
        ::-webkit-scrollbar { width: 0px; background: transparent; }
    </style>
</head>
<body class="text-slate-800 min-h-screen p-4 flex flex-col items-center">

    <header class="mb-8 mt-4 text-center">
        <h1 class="text-3xl font-black text-slate-900 tracking-tighter mb-2">
            Tide<span class="text-blue-600">Track</span>
        </h1>
        <div class="inline-flex items-center gap-2 bg-white px-4 py-1.5 rounded-full border border-slate-200 shadow-sm">
            <div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
            <span id="clock" class="text-xs font-bold text-slate-500 font-mono">--:--</span>
        </div>
    </header>

    <main id="app" class="w-full max-w-md flex flex-col gap-6">
        <div id="loader" class="py-12 flex flex-col items-center justify-center opacity-50">
            <div class="h-8 w-8 border-4 border-blue-600 border-t-transparent rounded-full animate-spin mb-4"></div>
            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Loading Tides...</p>
        </div>
    </main>

    <footer class="mt-12 text-center pb-10">
        <button onclick="window.location.reload()" class="bg-slate-900 hover:bg-blue-600 text-white font-bold py-3 px-8 rounded-xl transition-all shadow-lg text-sm mb-6">
            Refresh Data
        </button>
        <p class="text-[10px] leading-relaxed text-slate-400 font-medium max-w-xs mx-auto">
            Build v5.0 ‚Ä¢ Educational Use Only.<br/>
            <span class="text-rose-400 font-bold">NOT FOR NAVIGATION.</span>
        </p>
    </footer>

    <script>
        // Clock
        setInterval(() => {
            const now = new Date();
            document.getElementById('clock').innerText = now.toLocaleTimeString([], {hour: 'numeric', minute:'2-digit'});
        }, 1000);

        async function init() {
            try {
                // Fetch Data
                const res = await fetch('/api/tide-data?bust=' + Date.now());
                const container = document.getElementById('app');
                const loader = document.getElementById('loader');
                
                if (!res.ok) throw new Error("Offline");
                const data = await res.json();
                
                if(loader) loader.remove();
                container.innerHTML = '';

                data.forEach(station => {
                    if (station.error) {
                        container.innerHTML += `<div class="p-4 bg-rose-50 text-rose-500 rounded-2xl text-center font-bold">‚ö†Ô∏è ${station.name} Offline</div>`;
                        return;
                    }

                    // --- GENERATE ROWS ---
                    let rowsHTML = '';
                    station.timeline.forEach((event) => {
                        // Time Formatting
                        const dateObj = new Date(event.time.replace(/-/g, '/'));
                        const timeStr = dateObj.toLocaleTimeString([], {hour: 'numeric', minute:'2-digit'});
                        
                        // Logic for High vs Low styling
                        const isHigh = event.type === 'High Tide';
                        const label = isHigh ? 'HIGH TIDE' : 'LOW TIDE';
                        const tagColor = isHigh ? 'bg-blue-100 text-blue-700' : 'bg-slate-100 text-slate-600';
                        
                        // ROW HTML (Ferry Style)
                        rowsHTML += `
                            <div class="flex items-center justify-between py-3 border-b border-slate-50 last:border-0">
                                <div class="text-left">
                                    <span class="${tagColor} px-2 py-1 rounded-md text-[10px] font-bold uppercase tracking-wider block w-fit mb-1">
                                        ${label}
                                    </span>
                                    <div class="text-xl font-bold text-slate-800">${timeStr}</div>
                                </div>
                                <div class="text-right">
                                    <div class="text-xl font-black text-slate-800">${event.value}<span class="text-sm font-bold text-slate-400 ml-0.5">ft</span></div>
                                </div>
                            </div>
                        `;
                    });

                    // --- CARD HTML ---
                    const card = document.createElement('div');
                    // Ferry App Card Style: White, Rounded, Shadow, Padding
                    card.className = 'bg-white rounded-2xl p-5 shadow-sm border border-slate-100 mb-4';
                    
                    card.innerHTML = `
                        <div class="flex justify-between items-start mb-6 border-b border-slate-100 pb-4">
                            <div>
                                <h2 class="text-lg font-black text-slate-900 leading-tight">${station.name}</h2>
                                <p class="text-xs font-bold text-slate-400 uppercase mt-1">Live Status</p>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-black text-blue-600 flex justify-end items-baseline">
                                    ${station.current.value}<span class="text-sm text-slate-400 ml-1">ft</span>
                                </div>
                                <div class="text-[10px] font-bold text-slate-500 uppercase tracking-wide">
                                    ${station.current.trend === 'Rising' ? 'üåä Rising' : 'üìâ Falling'}
                                </div>
                            </div>
                        </div>

                        <div class="flex flex-col gap-1">
                            ${rowsHTML}
                        </div>
                    `;
                    container.appendChild(card);
                });

            } catch (err) {
                console.error(err);
                const container = document.getElementById('app');
                container.innerHTML = `<div class="text-center p-4 text-slate-400 font-bold">System Offline</div>`;
            }
        }
        init();
    </script>
</body>
</html>