---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <title>TideTrack Flight Board</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
        body { font-family: 'Outfit', sans-serif; }
        /* Hide Scrollbar */
        ::-webkit-scrollbar { width: 0px; background: transparent; }
    </style>
</head>
<body class="bg-slate-100 text-slate-800 min-h-screen p-4 md:p-8 flex justify-center items-center">

    <div class="w-full max-w-lg bg-white min-h-[80vh] rounded-[3rem] shadow-[0_20px_60px_-15px_rgba(0,0,0,0.1)] border-[6px] border-white overflow-hidden flex flex-col relative">
        
        <header class="px-8 pt-12 pb-6 bg-white z-10 flex flex-col items-center text-center gap-3">
            <h1 class="text-4xl font-black text-slate-900 tracking-tighter">
                Tide<span class="text-blue-600">Track</span>
            </h1>
            <div class="inline-flex items-center gap-2 bg-slate-50 px-4 py-1.5 rounded-full border border-slate-100">
                <div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
                <span id="clock" class="text-xs font-bold text-slate-500 font-mono">--:--</span>
            </div>
        </header>

        <main class="flex-1 bg-slate-50/50 p-6 overflow-y-auto">
            <div id="grid" class="flex flex-col gap-6">
                <div id="loader" class="py-20 flex flex-col items-center justify-center opacity-50">
                    <div class="h-8 w-8 border-4 border-blue-600 border-t-transparent rounded-full animate-spin mb-4"></div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Loading Schedule...</p>
                </div>
            </div>
        </main>

        <footer class="px-8 py-8 bg-white border-t border-slate-50 flex flex-col items-center text-center z-10">
            <button onclick="window.location.reload()" class="w-full bg-slate-900 hover:bg-blue-600 text-white font-bold py-4 rounded-2xl transition-all shadow-lg text-sm mb-6">
                Refresh Board
            </button>
            <p class="text-[10px] leading-relaxed text-slate-300 font-medium">
                Build v4.0 ‚Ä¢ Educational Use Only.<br/>
                <span class="text-rose-400 font-bold">NOT FOR NAVIGATION.</span>
            </p>
        </footer>
    </div>

    <script>
        // Clock
        setInterval(() => {
            const now = new Date();
            document.getElementById('clock').innerText = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        }, 1000);

        async function init() {
            try {
                const res = await fetch('/api/tide-data?bust=' + Date.now());
                const container = document.getElementById('grid');
                const loader = document.getElementById('loader');
                
                if (!res.ok) throw new Error("Offline");
                const data = await res.json();
                
                if(loader) loader.remove();
                container.innerHTML = '';

                data.forEach(station => {
                    if (station.error) {
                        container.innerHTML += `<div class="p-4 bg-rose-50 text-rose-500 rounded-2xl text-center font-bold">‚ö†Ô∏è ${station.name} Offline</div>`;
                        return;
                    }

                    // --- GENERATE TIMELINE HTML ---
                    let timelineHTML = '';
                    station.timeline.forEach((event, idx) => {
                        // Parse time for pretty display
                        const dateObj = new Date(event.time.replace(/-/g, '/'));
                        const timeStr = dateObj.toLocaleTimeString([], {hour: 'numeric', minute:'2-digit'});
                        
                        // Styling based on High vs Low
                        const isHigh = event.type === 'High Tide';
                        const icon = isHigh ? '‚ñ≤' : '‚ñº';
                        const colorClass = isHigh ? 'text-blue-600 bg-blue-50' : 'text-slate-500 bg-slate-100';
                        
                        timelineHTML += `
                            <div class="flex items-center justify-between p-3 mb-2 rounded-xl border border-slate-100 bg-white shadow-sm">
                                <div class="flex items-center gap-3">
                                    <span class="w-10 h-10 flex items-center justify-center rounded-lg text-sm font-bold ${colorClass}">
                                        ${icon}
                                    </span>
                                    <div class="text-left">
                                        <p class="text-sm font-bold text-slate-800">${event.type}</p>
                                        <p class="text-xs font-semibold text-slate-400">${timeStr}</p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <p class="text-lg font-black text-slate-800">${event.value}<span class="text-xs font-medium text-slate-400 ml-0.5">ft</span></p>
                                </div>
                            </div>
                        `;
                    });

                    // --- CARD RENDER ---
                    const card = document.createElement('div');
                    card.className = 'bg-white rounded-[2.5rem] p-6 shadow-xl border border-slate-100 flex flex-col items-center text-center';
                    
                    card.innerHTML = `
                        <h2 class="text-xl font-bold text-slate-400 uppercase tracking-wider mb-6">${station.name}</h2>
                        
                        <div class="mb-8 flex flex-col items-center">
                            <div class="text-6xl font-black text-slate-900 tracking-tighter flex items-start">
                                ${station.current.value}<span class="text-2xl mt-2 text-slate-400 font-bold">ft</span>
                            </div>
                            <div class="mt-2 inline-flex items-center gap-1 px-3 py-1 rounded-full bg-slate-100 text-xs font-bold text-slate-500 uppercase tracking-wide">
                                ${station.current.trend === 'Rising' ? 'üåä Rising' : 'üìâ Falling'}
                            </div>
                        </div>

                        <div class="w-full flex flex-col gap-1">
                            <p class="text-left text-xs font-bold text-slate-300 uppercase tracking-widest mb-2 pl-2">Upcoming</p>
                            ${timelineHTML}
                        </div>
                    `;
                    container.appendChild(card);
                });

            } catch (err) {
                console.error(err);
                const container = document.getElementById('grid');
                container.innerHTML = `<div class="text-center p-4 text-slate-400 font-bold">System Offline</div>`;
            }
        }
        init();
    </script>
</body>
</html>