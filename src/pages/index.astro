---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TideTrack Pro</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-slate-800 p-6 md:p-12 font-sans">
    <div class="max-w-5xl mx-auto">
        <header class="mb-10 flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-black text-slate-900 tracking-tighter">
                    Tide<span class="text-blue-600">Track</span>
                </h1>
                <p class="text-slate-400 text-sm font-bold tracking-widest uppercase mt-1">
                    48-Hour Forecast
                </p>
            </div>
            <div class="text-right">
                <div id="clock" class="text-xl font-mono text-slate-500 font-bold">--:--</div>
                <button onclick="window.location.reload()" class="text-xs font-bold text-blue-500 hover:text-blue-700 uppercase tracking-wider mt-1">
                    Refresh Feed
                </button>
            </div>
        </header>
        
        <div id="grid" class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div id="status" class="col-span-full py-24 text-center text-slate-300 animate-pulse flex flex-col items-center">
                <div class="h-8 w-8 border-4 border-blue-500 border-t-transparent rounded-full animate-spin mb-4"></div>
                Syncing with NOAA Satellites...
            </div>
        </div>
    </div>

    <script>
        // 1. Simple Digital Clock
        setInterval(() => {
            const now = new Date();
            document.getElementById('clock').innerText = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        }, 1000);

        // 2. Main Logic
        async function init() {
            try {
                const res = await fetch('/api/tide-data');
                
                // Defensive: Check if server failed
                if (!res.ok) throw new Error(`Server Error (${res.status})`);
                
                const data = await res.json();
                
                // Defensive: Check if API returned an internal error
                if (data.error) throw new Error(data.error);

                const container = document.getElementById('grid');
                container.innerHTML = ''; // Clear the loader

                data.forEach((station, i) => {
                    // Defensive: Check if this specific station has data
                    if (station.error || !station.predictions || station.predictions.length === 0) {
                        container.innerHTML += `
                            <div class="p-6 border border-red-200 bg-red-50 rounded-xl text-red-600 font-bold text-center">
                                ⚠️ Unable to load data for ${station.name}
                            </div>`;
                        return;
                    }

                    // Create the Card
                    const card = document.createElement('div');
                    card.className = 'border-2 border-slate-100 p-6 rounded-3xl shadow-lg bg-white relative overflow-hidden';
                    
                    card.innerHTML = `
                        <div class="flex justify-between items-start mb-2">
                            <h2 class="text-2xl font-bold text-slate-800">${station.name}</h2>
                            <span class="text-xs font-bold bg-blue-100 text-blue-600 px-2 py-1 rounded-md">LIVE</span>
                        </div>
                        <p class="text-slate-400 text-sm mb-6 font-medium">Hourly Prediction</p>
                        
                        <div class="relative h-64 w-full">
                            <canvas id="c-${i}"></canvas>
                        </div>
                    `;
                    container.appendChild(card);

                    // Prepare Data for Chart.js
                    const labels = station.predictions.map(p => p.t);
                    const values = station.predictions.map(p => p.v);
                    
                    // Find Peaks for the "Big Dots"
                    const high = Math.max(...values);
                    const low = Math.min(...values);

                    const ctx = document.getElementById(`c-${i}`);
                    
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                data: values,
                                borderColor: '#2563eb', // Nice deep blue
                                borderWidth: 4,
                                tension: 0.4, // Smooths the line into a wave
                                
                                // LOGIC: Big dots on peaks, small dots on hours
                                pointRadius: (c) => {
                                    const v = c.dataset.data[c.dataIndex];
                                    return (v === high || v === low) ? 6 : 2;
                                },
                                // Hover effect: Make dots huge when touched
                                pointHoverRadius: 8,
                                pointBackgroundColor: '#2563eb',
                                pointBorderColor: '#fff',
                                pointBorderWidth: 2,
                                
                                fill: true,
                                backgroundColor: 'rgba(37, 99, 235, 0.05)'
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: {
                                mode: 'index',
                                intersect: false,
                            },
                            plugins: { 
                                legend: { display: false },
                                tooltip: {
                                    backgroundColor: '#1e293b',
                                    padding: 12,
                                    titleFont: { size: 14 },
                                    bodyFont: { size: 14, weight: 'bold' },
                                    displayColors: false,
                                    callbacks: {
                                        title: (items) => {
                                            // Clean up the tooltip title
                                            const label = items[0].label;
                                            const [d, t] = label.split(' ');
                                            const [h, m] = t.split(':');
                                            const hour = parseInt(h);
                                            const ampm = hour >= 12 ? 'PM' : 'AM';
                                            return `${hour % 12 || 12}:${m} ${ampm}`;
                                        },
                                        label: (item) => `${item.formattedValue} ft`
                                    }
                                }
                            },
                            scales: {
                                x: {
                                    type: 'category', // Prevents the "Horizontal Line" bug
                                    grid: { display: false },
                                    ticks: {
                                        maxTicksLimit: 6,
                                        color: '#94a3b8',
                                        callback: function(val, index) {
                                            // Format X-Axis: "10 PM"
                                            const label = this.getLabelForValue(val);
                                            if (!label) return "";
                                            const timePart = label.split(' ')[1];
                                            if (!timePart) return "";
                                            const h = parseInt(timePart.split(':')[0]);
                                            const ampm = h >= 12 ? 'PM' : 'AM';
                                            return `${h % 12 || 12} ${ampm}`;
                                        }
                                    }
                                },
                                y: {
                                    // Add breathing room top and bottom
                                    suggestedMin: low - 1,
                                    suggestedMax: high + 1,
                                    border: { display: false },
                                    grid: { color: '#f1f5f9' },
                                    ticks: { color: '#94a3b8' }
                                }
                            }
                        }
                    });
                });

            } catch (err) {
                console.error(err);
                document.getElementById('status').innerHTML = `
                    <div class="text-red-500 font-bold bg-red-50 p-4 rounded-lg border border-red-100">
                        System Error: ${err.message}
                    </div>
                `;
            }
        }
        
        // Run the app
        init();
    </script>
</body>
</html>