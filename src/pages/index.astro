---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    
    <title>TideTrack Pro v3.2</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
        body { font-family: 'Outfit', sans-serif; }
        ::-webkit-scrollbar { width: 0px; background: transparent; }
    </style>
</head>
<body class="bg-slate-100 text-slate-800 min-h-screen p-4 md:p-8 flex justify-center items-center">

    <div class="w-full max-w-3xl bg-white min-h-[80vh] rounded-[3rem] shadow-[0_20px_60px_-15px_rgba(0,0,0,0.1)] border-[6px] border-white overflow-hidden flex flex-col relative">
        
        <header class="px-8 pt-12 pb-6 bg-white z-10 flex flex-col items-center text-center gap-3">
            <h1 class="text-5xl font-black text-slate-900 tracking-tighter">
                Tide<span class="text-blue-600">Track</span>
            </h1>
            
            <div class="flex items-center gap-3 bg-slate-50 px-5 py-2 rounded-full border border-slate-100 shadow-sm">
                <span class="relative flex h-2.5 w-2.5">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500"></span>
                </span>
                <span class="text-xs font-bold text-slate-400 uppercase tracking-widest">
                    Live Feed
                </span>
                <span class="w-px h-3 bg-slate-300"></span>
                <div id="clock" class="text-sm font-bold text-slate-600 font-mono tracking-tight">--:--</div>
            </div>
        </header>

        <main class="flex-1 bg-slate-50/50 p-6 md:p-10">
            <div id="grid" class="flex flex-col gap-10">
                <div id="status" class="py-24 flex flex-col items-center justify-center opacity-50">
                    <div class="h-10 w-10 border-4 border-blue-600 border-t-transparent rounded-full animate-spin mb-4"></div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Syncing NOAA Data...</p>
                </div>
            </div>
        </main>

        <footer class="px-8 py-10 bg-white border-t border-slate-50 flex flex-col items-center text-center gap-6 z-10">
            <button onclick="window.location.href=window.location.href" class="group relative px-10 py-4 font-bold text-white transition-all duration-300 bg-slate-900 rounded-2xl hover:bg-blue-600 shadow-xl hover:shadow-blue-500/20 active:scale-95 text-sm tracking-wide">
                Force Update
            </button>
            
            <div class="max-w-xs mx-auto space-y-3">
                <div class="flex justify-center gap-4 text-[10px] font-bold uppercase tracking-widest text-slate-300">
                    <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-orange-500 shadow-sm"></span> Now</span>
                    <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-slate-900 shadow-sm"></span> High/Low</span>
                </div>
                <p class="text-[10px] leading-relaxed text-slate-300 font-medium pt-2 border-t border-slate-100">
                    Build v3.2 • Educational Use Only.<br/>
                    <span class="text-rose-400 font-bold">NOT FOR NAVIGATION.</span>
                    <br/><span id="debug-info" class="text-slate-200">Waiting for diagnostics...</span>
                </p>
            </div>
        </footer>
    </div>

    <script>
        setInterval(() => {
            const now = new Date();
            document.getElementById('clock').innerText = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        }, 1000);

        async function init() {
            try {
                // Fetch data with cache bust
                const apiUrl = '/api/tide-data?bust=' + Date.now();
                const res = await fetch(apiUrl);
                const container = document.getElementById('grid');
                
                if (!res.ok) throw new Error("Server Unavailable");
                const fullData = await res.json();
                
                container.innerHTML = ''; 

                // Diagnostics
                if (fullData.length > 0) {
                    const sVer = fullData[0].server_version || "Old";
                    const count = fullData[0].predictions ? fullData[0].predictions.length : 0;
                    document.getElementById('debug-info').innerText = 'API v' + sVer + ' • Loaded ' + count + ' hours';
                }

                fullData.forEach((station, i) => {
                    if (station.error || !station.predictions || station.predictions.length === 0) {
                        container.innerHTML += '<div class="p-6 bg-rose-50 text-rose-500 rounded-3xl text-center font-bold border border-rose-100">Station Offline</div>';
                        return;
                    }

                    // 1. WINDOWING
                    const now = new Date();
                    let rawNowIndex = 0;
                    let minDiff = Infinity;
                    
                    station.predictions.forEach((p, idx) => {
                        const pDate = new Date(p.t.replace(/-/g, '/')); 
                        const diff = Math.abs(now - pDate);
                        if (diff < minDiff) { minDiff = diff; rawNowIndex = idx; }
                    });

                    // 4 hours back -> 48 hours forward
                    const startIdx = Math.max(0, rawNowIndex - 4);
                    const endIdx = Math.min(station.predictions.length, rawNowIndex + 48);
                    
                    const subset = station.predictions.slice(startIdx, endIdx);
                    const displayNowIndex = rawNowIndex - startIdx;

                    // 2. FIND ALL EVENTS (Black Dots)
                    const eventIndices = [];
                    let firstEventIndex = -1;

                    for (let j = 1; j < subset.length - 1; j++) {
                        const prev = subset[j-1].v;
                        const curr = subset[j].v;
                        const next = subset[j+1].v;
                        
                        // Check for Peak OR Valley
                        if ((curr > prev && curr > next) || (curr < prev && curr < next)) {
                            // Only count if it's in the future (or very close to now)
                            if (j > displayNowIndex) {
                                eventIndices.push(j);
                                if (firstEventIndex === -1) firstEventIndex = j;
                            }
                        }
                    }

                    // 3. DATA PREP
                    const labels = subset.map(p => p.t);
                    const values = subset.map(p => p.v);
                    const high = Math.max(...values);
                    const low = Math.min(...values);

                    // Badge Text Logic (First Event Only)
                    let badgeText = "Trend Only";
                    if (firstEventIndex !== -1) {
                         const eVal = values[firstEventIndex];
                         const eType = eVal > values[firstEventIndex-1] ? "High" : "Low";
                         const tStr = labels[firstEventIndex].split(' ')[1];
                         const [hStr, mStr] = tStr.split(':');
                         let hour = parseInt(hStr);
                         const ampm = hour >= 12 ? 'PM' : 'AM';
                         hour = hour % 12 || 12;
                         badgeText = "Next " + eType + " " + hour + ":" + mStr + " " + ampm;
                    } else {
                        const currentV = values[displayNowIndex];
                        const nextV = values[displayNowIndex + 1] || currentV;
                        badgeText = nextV > currentV ? "Rising" : "Falling";
                    }

                    // 4. RENDER CARD
                    const card = document.createElement('div');
                    card.className = 'bg-white rounded-[2.5rem] p-6 md:p-8 shadow-[0_15px_40px_-10px_rgba(0,0,0,0.06)] border border-slate-100 relative';
                    
                    card.innerHTML = `
                        <div class="flex flex-col items-center mb-6 text-center">
                            <h2 class="text-3xl font-bold text-slate-800 tracking-tight mb-2">${station.name}</h2>
                            <span class="text-[10px] font-bold text-slate-500 bg-slate-100 px-4 py-1.5 rounded-full uppercase tracking-widest shadow-sm">
                                ${badgeText}
                            </span>
                        </div>
                        <div class="relative h-64 w-full">
                            <canvas id="c-${i}"></canvas>
                        </div>
                    `;
                    container.appendChild(card);

                    const ctx = document.getElementById(`c-${i}`);
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                data: values,
                                borderWidth: 4,
                                tension: 0.45,
                                fill: true,
                                backgroundColor: 'rgba(37, 99, 235, 0.03)',
                                segment: {
                                    borderColor: ctx => ctx.p0DataIndex < displayNowIndex ? 'rgba(203, 213, 225, 0.5)' : '#2563eb',
                                    borderDash: ctx => ctx.p0DataIndex < displayNowIndex ? [6, 6] : undefined,
                                },
                                pointRadius: (c) => {
                                    const idx = c.dataIndex;
                                    // 1. Live Dot
                                    if (idx === displayNowIndex) return 9; 
                                    // 2. Event Dots (All Future Peaks)
                                    if (eventIndices.includes(idx)) return 7; 
                                    return 0;
                                },
                                pointBackgroundColor: (c) => {
                                    const idx = c.dataIndex;
                                    if (idx === displayNowIndex) return '#f97316'; // Orange
                                    if (eventIndices.includes(idx)) return '#1e293b'; // Black
                                    return '#3b82f6';
                                },
                                pointBorderColor: '#fff',
                                pointBorderWidth: 3,
                                pointHoverRadius: 10,
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: { mode: 'index', intersect: false },
                            plugins: { legend: { display: false } },
                            scales: {
                                x: {
                                    type: 'category',
                                    grid: { display: false },
                                    ticks: {
                                        maxTicksLimit: 6,
                                        color: (c) => c.index === displayNowIndex ? '#f97316' : '#cbd5e1',
                                        font: (c) => c.index === displayNowIndex ? {weight:'800', size:12} : {weight:'600', size:11},
                                        callback: function(val, index) {
                                            if (index === displayNowIndex) return "NOW";
                                            // Hide label if it's a black dot to prevent clutter
                                            if (eventIndices.includes(index)) return ""; 
                                            
                                            const label = this.getLabelForValue(val);
                                            const time = label.split(' ')[1];
                                            const h = parseInt(time.split(':')[0]);
                                            return `${h % 12 || 12}${h >= 12 ? 'pm' : 'am'}`;
                                        }
                                    }
                                },
                                y: { display: false, suggestedMin: low - 1.5, suggestedMax: high + 1.5 }
                            }
                        }
                    });
                });
            } catch (err) { console.error(err); }
        }
        init();
    </script>
</body>
</html>