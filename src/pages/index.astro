---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TideTrack Pro</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-slate-900 p-4 md:p-10 font-sans">
    <div class="max-w-6xl mx-auto">
        <header class="mb-8 flex justify-between items-center">
            <h1 class="text-3xl font-black italic tracking-tighter text-blue-600">TideTrack <span class="text-slate-400 font-normal">Pro</span></h1>
            <button onclick="window.location.reload()" class="text-slate-400 hover:text-blue-600 text-sm font-bold transition-colors">
                REFRESH
            </button>
        </header>
        
        <div id="grid" class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div id="loader" class="col-span-full py-20 text-center text-slate-300 animate-pulse">
                Loading Swells...
            </div>
        </div>
    </div>

    <script>
        async function init() {
            try {
                const res = await fetch('/api/tide-data');
                const data = await res.json();
                
                const loader = document.getElementById('loader');
                if (loader) loader.remove();
                
                const container = document.getElementById('grid');

                data.forEach((station, i) => {
                    const card = document.createElement('div');
                    card.className = 'border-2 border-slate-100 p-6 rounded-3xl shadow-sm bg-white';
                    card.innerHTML = `
                        <h2 class="text-2xl font-bold mb-4 text-slate-800">${station.name}</h2>
                        <div class="h-64"><canvas id="c-${i}"></canvas></div>
                    `;
                    container.appendChild(card);

                    // We extract the numbers only. 
                    // No date math = no horizontal line bugs.
                    const values = station.predictions.map(p => parseFloat(p.v));
                    const labels = station.predictions.map(p => p.t);
                    
                    const high = Math.max(...values);
                    const low = Math.min(...values);

                    const ctx = document.getElementById(`c-${i}`);
                    
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels, // The text labels for the bottom
                            datasets: [{
                                data: values, // The actual wave heights
                                borderColor: '#2563eb',
                                borderWidth: 4,
                                tension: 0.4, // This forces the curve
                                pointRadius: (ctx) => (values[ctx.dataIndex] === high || values[ctx.dataIndex] === low) ? 6 : 0,
                                pointBackgroundColor: '#2563eb',
                                fill: true,
                                backgroundColor: 'rgba(37, 99, 235, 0.05)'
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { display: false } },
                            scales: {
                                x: {
                                    // 'category' scale is the most stable. 
                                    // It just puts points in order from left to right.
                                    type: 'category', 
                                    ticks: {
                                        maxTicksLimit: 6,
                                        color: '#94a3b8',
                                        // Simplified label cleaner
                                        callback: function(val, index) {
                                            const fullLabel = labels[index];
                                            if (!fullLabel) return '';
                                            const timePart = fullLabel.split(' ')[1]; // Get HH:MM
                                            const hour = parseInt(timePart.split(':')[0]);
                                            return `${hour % 12 || 12}${hour >= 12 ? 'PM' : 'AM'}`;
                                        }
                                    },
                                    grid: { display: false }
                                },
                                y: {
                                    // Forces the window to stay "zoomed out"
                                    min: Math.floor(low) - 1,
                                    max: Math.ceil(high) + 1,
                                    ticks: { color: '#94a3b8' },
                                    grid: { color: '#f8fafc' },
                                    border: { display: false }
                                }
                            }
                        }
                    });
                });
            } catch (e) {
                console.error("Dashboard failed:", e);
            }
        }
        init();
    </script>
</body>
</html>