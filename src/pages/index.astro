---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TideTrack Pro</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    </style>
</head>
<body class="bg-slate-50 text-slate-800 min-h-screen p-3 md:p-8 flex justify-center items-start">

    <div class="w-full max-w-4xl bg-white min-h-[90vh] rounded-[2.5rem] shadow-2xl border-4 border-white ring-1 ring-slate-900/5 overflow-hidden flex flex-col">
        
        <header class="px-8 pt-10 pb-6 bg-white flex justify-between items-center border-b border-slate-100/50">
            <div>
                <h1 class="text-3xl font-black text-slate-900 tracking-tighter">
                    Tide<span class="text-blue-600">Track</span>
                </h1>
                <div class="flex items-center gap-2 mt-1">
                    <span class="relative flex h-2 w-2">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-orange-500"></span>
                    </span>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">
                        Live Dashboard
                    </p>
                </div>
            </div>
            <div class="text-right">
                <div id="clock" class="text-xl font-mono font-bold text-slate-600 tracking-tight">--:--</div>
            </div>
        </header>

        <main class="flex-1 bg-slate-50/50 p-4 md:p-8">
            <div id="grid" class="grid grid-cols-1 gap-6">
                <div id="status" class="py-20 text-center flex flex-col items-center justify-center opacity-60">
                    <div class="h-8 w-8 border-4 border-blue-600 border-t-transparent rounded-full animate-spin mb-4"></div>
                    <p class="text-sm font-bold text-slate-400 uppercase tracking-wide">Locating Tides...</p>
                </div>
            </div>
        </main>

        <footer class="px-6 py-6 bg-slate-50 border-t border-slate-100 flex flex-col items-center gap-6">
            <button onclick="window.location.reload()" class="group relative px-6 py-3 font-bold text-white transition-all duration-200 bg-slate-900 rounded-full hover:bg-blue-600 shadow-lg hover:shadow-blue-500/30 active:scale-95 text-sm">
                Refresh Dashboard
            </button>
            <div class="text-[10px] leading-relaxed text-center text-slate-400 max-w-sm mx-auto pt-2">
                <p>Gray line = Past. Blue line = Forecast.</p>
                <p class="mt-1">EDUCATIONAL USE ONLY. <span class="text-red-400 font-medium">NOT FOR NAVIGATION.</span></p>
            </div>
        </footer>
    </div>

    <script>
        setInterval(() => {
            document.getElementById('clock').innerText = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        }, 1000);

        async function init() {
            try {
                const res = await fetch('/api/tide-data');
                const container = document.getElementById('grid');
                
                if (!res.ok) throw new Error("Server Unavailable");
                const data = await res.json();
                
                container.innerHTML = ''; 

                data.forEach((station, i) => {
                    if (station.error || !station.predictions || station.predictions.length === 0) {
                        container.innerHTML += `<div class="p-6 bg-red-50 text-red-500 rounded-2xl text-center text-sm font-bold border border-red-100">⚠️ ${station.name} Unavailable</div>`;
                        return;
                    }

                    const card = document.createElement('div');
                    card.className = 'bg-white rounded-3xl p-6 shadow-[0_8px_30px_rgb(0,0,0,0.04)] border border-slate-100 relative transition-all duration-300 hover:shadow-xl';
                    
                    card.innerHTML = `
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-slate-800 leading-none">${station.name}</h2>
                        </div>
                        <div class="relative h-64 w-full">
                            <canvas id="c-${i}"></canvas>
                        </div>
                    `;
                    container.appendChild(card);

                    // --- DATA PREP ---
                    const labels = station.predictions.map(p => p.t);
                    const values = station.predictions.map(p => p.v);
                    const high = Math.max(...values);
                    const low = Math.min(...values);

                    // FIND "NOW" INDEX
                    // We look for the data point closest to the current time
                    const now = new Date();
                    let nowIndex = 0;
                    let minDiff = Infinity;
                    
                    station.predictions.forEach((p, idx) => {
                        // Fix date string for Safari/iPhone (replace space with T or - with /)
                        const pDate = new Date(p.t.replace(/-/g, '/')); 
                        const diff = Math.abs(now - pDate);
                        if (diff < minDiff) {
                            minDiff = diff;
                            nowIndex = idx;
                        }
                    });

                    const ctx = document.getElementById(`c-${i}`);

                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                data: values,
                                borderWidth: 3,
                                tension: 0.4,
                                fill: true,
                                backgroundColor: 'rgba(37, 99, 235, 0.04)',
                                
                                // THE MAGIC: Dynamic Colors based on "Now"
                                segment: {
                                    borderColor: ctx => ctx.p0DataIndex < nowIndex ? 'rgba(148, 163, 184, 0.5)' : '#2563eb',
                                    borderDash: ctx => ctx.p0DataIndex < nowIndex ? [6, 6] : undefined,
                                },

                                // THE DOTS:
                                // Index == nowIndex ? ORANGE (Live)
                                // High/Low ? Blue (Size 6)
                                // Past ? Gray (Small)
                                pointRadius: (c) => {
                                    const idx = c.dataIndex;
                                    const v = c.dataset.data[idx];
                                    if (idx === nowIndex) return 8; // LIVE DOT IS HUGE
                                    if (v === high || v === low) return 5;
                                    return 0; // Hide intermediate dots to reduce clutter
                                },
                                pointBackgroundColor: (c) => {
                                    if (c.dataIndex === nowIndex) return '#f97316'; // Orange for Live
                                    if (c.dataIndex < nowIndex) return '#cbd5e1'; // Gray for Past
                                    return '#2563eb'; // Blue for Future
                                },
                                pointBorderColor: '#fff',
                                pointBorderWidth: 3,
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: { mode: 'index', intersect: false },
                            plugins: { legend: { display: false } },
                            scales: {
                                x: {
                                    type: 'category',
                                    grid: { display: false },
                                    ticks: {
                                        maxTicksLimit: 6,
                                        color: (c) => c.index === nowIndex ? '#f97316' : '#94a3b8', // Color the "Now" label orange
                                        font: (c) => c.index === nowIndex ? {weight:'bold', size:12} : {size:11},
                                        callback: function(val, index) {
                                            if (index === nowIndex) return "NOW"; // Force label to say "NOW"
                                            
                                            const label = this.getLabelForValue(val);
                                            const time = label.split(' ')[1];
                                            const [h, m] = time.split(':');
                                            const hour = parseInt(h);
                                            const ampm = hour >= 12 ? 'pm' : 'am';
                                            return `${hour % 12 || 12}${ampm}`;
                                        }
                                    }
                                },
                                y: {
                                    display: false, // Hide Y axis numbers (cleaner)
                                    suggestedMin: low - 1,
                                    suggestedMax: high + 1,
                                }
                            }
                        }
                    });
                });

            } catch (err) {
                console.error(err);
            }
        }
        init();
    </script>
</body>
</html>