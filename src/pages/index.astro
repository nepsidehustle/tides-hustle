---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TideTrack Pro</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-slate-800 p-6 md:p-12 font-sans">
    <div class="max-w-5xl mx-auto">
        <header class="mb-10 flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-black text-slate-900 tracking-tighter">Tide<span class="text-blue-600">Track</span></h1>
                <p class="text-slate-400 text-sm font-bold tracking-widest uppercase mt-1">48-Hour Forecast</p>
            </div>
            <div id="clock" class="text-xl font-mono text-slate-400">--:--</div>
        </header>
        
        <div id="grid" class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="col-span-full py-24 text-center text-slate-300 animate-pulse">
                Loading Tide Data...
            </div>
        </div>
    </div>

    <script>
        // Simple clock
        setInterval(() => {
            document.getElementById('clock').innerText = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        }, 1000);

        async function init() {
            try {
                const res = await fetch('/api/tide-data');
                const data = await res.json();
                const container = document.getElementById('grid');
                container.innerHTML = ''; // Clear loader

                data.forEach((station, i) => {
                    const card = document.createElement('div');
                    card.className = 'border-2 border-slate-100 p-6 rounded-3xl shadow-lg bg-white';
                    
                    // We need a canvas with a set height
                    card.innerHTML = `
                        <div class="flex justify-between items-end mb-6">
                            <h2 class="text-2xl font-bold text-slate-800">${station.name}</h2>
                            <span class="text-blue-600 font-bold text-sm bg-blue-50 px-3 py-1 rounded-full">LIVE</span>
                        </div>
                        <div class="relative h-64 w-full">
                            <canvas id="c-${i}"></canvas>
                        </div>
                    `;
                    container.appendChild(card);

                    // Extract strict arrays for the chart
                    const labels = station.predictions.map(p => p.t);
                    const values = station.predictions.map(p => p.v);
                    
                    // Find peaks for the markers
                    const high = Math.max(...values);
                    const low = Math.min(...values);

                    const ctx = document.getElementById(`c-${i}`);
                    
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                data: values,
                                borderColor: '#2563eb', // Strong Blue
                                borderWidth: 4,
                                tension: 0.4, // Smooths the hourly points into a wave
                                pointRadius: (c) => {
                                    const v = c.dataset.data[c.dataIndex];
                                    return (v === high || v === low) ? 6 : 0;
                                },
                                pointBackgroundColor: '#2563eb',
                                pointBorderColor: '#fff',
                                pointBorderWidth: 2,
                                fill: true,
                                backgroundColor: 'rgba(37, 99, 235, 0.05)'
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { display: false } },
                            scales: {
                                x: {
                                    // "Category" simply lists the items. It is impossible for this to stack points.
                                    type: 'category', 
                                    grid: { display: false },
                                    ticks: {
                                        maxTicksLimit: 6,
                                        callback: function(val, index) {
                                            // Parse "2026-01-23 10:00" -> "10 AM"
                                            const label = this.getLabelForValue(val);
                                            const timePart = label.split(' ')[1];
                                            const h = parseInt(timePart.split(':')[0]);
                                            const ampm = h >= 12 ? 'PM' : 'AM';
                                            const hour12 = h % 12 || 12;
                                            return `${hour12} ${ampm}`;
                                        }
                                    }
                                },
                                y: {
                                    // Force the chart to encompass the wave + 1 foot buffer
                                    suggestedMin: low - 1,
                                    suggestedMax: high + 1,
                                    border: { display: false },
                                    grid: { color: '#f1f5f9' }
                                }
                            }
                        }
                    });
                });
            } catch (err) {
                console.error(err);
                document.getElementById('grid').innerHTML = `<p class="text-red-500 text-center col-span-full">Error loading dashboard.</p>`;
            }
        }
        init();
    </script>
</body>
</html>