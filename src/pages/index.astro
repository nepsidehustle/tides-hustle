---
export const prerender = false;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TideTrack</title>
    
    <style>
        /* RESET */
        * { box-sizing: border-box; margin: 0; padding: 0; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #f0f2f5;
            color: #1a1a1a;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        /* HEADER */
        header { text-align: center; margin-bottom: 30px; margin-top: 10px; }
        h1 { font-size: 28px; font-weight: 900; letter-spacing: -0.5px; margin-bottom: 8px; }
        .highlight { color: #2563eb; }

        .clock-badge {
            background: white; padding: 6px 14px; border-radius: 20px;
            border: 1px solid #ddd; font-size: 13px; font-weight: 700; color: #555;
            display: inline-flex; align-items: center; gap: 8px;
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        }
        .dot { width: 8px; height: 8px; background: #10b981; border-radius: 50%; box-shadow: 0 0 0 2px rgba(16,185,129,0.2); }

        /* APP CONTAINER */
        #app { width: 100%; max-width: 420px; }

        /* CARDS */
        .card {
            background: white; border-radius: 16px; padding: 20px; margin-bottom: 20px;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05); border: 1px solid #e5e7eb;
        }
        .card-header {
            display: flex; justify-content: space-between; align-items: flex-start;
            border-bottom: 1px solid #f3f4f6; padding-bottom: 16px; margin-bottom: 16px;
        }
        .name { font-size: 18px; font-weight: 800; color: #111; letter-spacing: -0.3px; }
        .sub { font-size: 11px; font-weight: 700; color: #9ca3af; text-transform: uppercase; margin-top: 4px; letter-spacing: 0.5px; }
        
        .hero-num { font-size: 32px; font-weight: 900; color: #2563eb; text-align: right; line-height: 1; }
        .hero-unit { font-size: 14px; color: #9ca3af; font-weight: 700; margin-left: 2px; }
        .trend-tag { 
            font-size: 11px; font-weight: 700; text-transform: uppercase; 
            background: #f3f4f6; color: #4b5563; padding: 4px 8px; border-radius: 6px;
            display: inline-block; margin-top: 6px; float: right; clear: both;
        }

        /* ROWS */
        .row {
            display: flex; justify-content: space-between; align-items: center;
            padding: 14px 0; border-bottom: 1px solid #f9fafb;
        }
        .row:last-child { border-bottom: none; }
        
        .pill { 
            font-size: 10px; font-weight: 800; padding: 5px 10px; border-radius: 6px; 
            text-transform: uppercase; margin-bottom: 4px; display: inline-block; letter-spacing: 0.5px;
        }
        .pill-high { background: #dbeafe; color: #1e40af; }
        .pill-low { background: #f3f4f6; color: #4b5563; }
        
        .time { font-size: 16px; font-weight: 700; color: #374151; }
        .val { font-size: 18px; font-weight: 800; color: #111; }

        /* STATES */
        .loader { text-align: center; color: #9ca3af; margin-top: 60px; font-weight: 600; font-size: 14px; }
        .error { text-align: center; color: #ef4444; padding: 20px; font-weight: 600; background: #fef2f2; border-radius: 12px; border: 1px solid #fecaca; }

        /* FOOTER */
        button {
            background: #111; color: white; border: none; padding: 14px 30px;
            border-radius: 12px; font-weight: 700; cursor: pointer; font-size: 14px;
            transition: opacity 0.2s;
        }
        button:hover { opacity: 0.9; }
        .footer-text { font-size: 10px; color: #9ca3af; margin-top: 15px; line-height: 1.5; }
    </style>
</head>
<body>

    <header>
        <h1>Tide<span class="highlight">Track</span></h1>
        <div class="clock-badge">
            <div class="dot"></div>
            <span id="clock">--:--</span>
        </div>
    </header>

    <div id="app">
        <div class="loader">Contacting NOAA Satellites...</div>
    </div>

    <div style="text-align: center; margin-top: 40px; padding-bottom: 40px;">
        <button onclick="window.location.reload()">Refresh Data</button>
        <p class="footer-text">
            Build v8.0 (Direct Client Fetch)<br>
            <strong>NOT FOR NAVIGATION.</strong>
        </p>
    </div>

    <script>
        // CONFIG
        const STATIONS = [
            { id: "8661070", name: "Myrtle Beach" },
            { id: "8517201", name: "Jamaica Bay" }
        ];

        // 1. Clock Logic
        setInterval(() => {
            const now = new Date();
            document.getElementById('clock').innerText = now.toLocaleTimeString([], {hour: 'numeric', minute:'2-digit'});
        }, 1000);

        // 2. Fetch Logic (Direct to NOAA)
        async function fetchStationData(station) {
            try {
                // Generate Dynamic URLs (Cache Busted)
                const cb = Date.now();
                const schedUrl = `https://api.tidesandcurrents.noaa.gov/api/prod/datagetter?station=${station.id}&date=today&range=48&product=predictions&datum=MLLW&time_zone=lst_ldt&units=english&interval=hilo&format=json&application=TideTrack&cb=${cb}`;
                const curUrl = `https://api.tidesandcurrents.noaa.gov/api/prod/datagetter?station=${station.id}&date=today&range=24&product=predictions&datum=MLLW&time_zone=lst_ldt&units=english&interval=h&format=json&application=TideTrack&cb=${cb}`;

                // Parallel Fetch
                const [schedRes, curRes] = await Promise.all([
                    fetch(schedUrl), 
                    fetch(curUrl)
                ]);

                const schedData = await schedRes.json();
                const curData = await curRes.json();

                // Process Current Level
                let currentLevel = "---";
                let trend = "Stable";
                
                if (curData.predictions && curData.predictions.length > 0) {
                    const now = new Date();
                    // Find closest hourly point
                    const closest = curData.predictions.reduce((prev, curr) => {
                        const pTime = new Date(prev.t.replace(/-/g, '/'));
                        const cTime = new Date(curr.t.replace(/-/g, '/'));
                        return (Math.abs(now - cTime) < Math.abs(now - pTime)) ? curr : prev;
                    });
                    currentLevel = parseFloat(closest.v).toFixed(1);
                    
                    // Determine Trend
                    const idx = curData.predictions.indexOf(closest);
                    if (idx < curData.predictions.length - 1) {
                        const nextVal = parseFloat(curData.predictions[idx+1].v);
                        trend = nextVal > parseFloat(currentLevel) ? "Rising" : "Falling";
                    }
                }

                // Process Future Timeline
                let timeline = [];
                if (schedData.predictions) {
                    const now = new Date();
                    timeline = schedData.predictions
                        .filter(p => new Date(p.t.replace(/-/g, '/')) > now)
                        .slice(0, 4); // Next 4 events
                }

                return {
                    name: station.name,
                    current: { value: currentLevel, trend: trend },
                    timeline: timeline
                };

            } catch (err) {
                console.warn(`Failed to load ${station.name}`, err);
                return { name: station.name, error: true };
            }
        }

        // 3. Main Init
        async function init() {
            const container = document.getElementById('app');
            
            try {
                // Fetch all stations in parallel
                const results = await Promise.all(STATIONS.map(fetchStationData));
                
                container.innerHTML = ''; // Clear loader

                results.forEach(station => {
                    // Error State
                    if (station.error) {
                        container.innerHTML += `<div class="error">‚ö†Ô∏è ${station.name} Unavailable</div>`;
                        return;
                    }

                    // Timeline HTML
                    let rowsHTML = '';
                    if (station.timeline.length === 0) {
                        rowsHTML = '<div style="text-align:center; padding:20px; color:#aaa; font-size:12px;">No future tides found today.</div>';
                    } else {
                        station.timeline.forEach(event => {
                            const d = new Date(event.time.replace(/-/g, '/'));
                            const tStr = d.toLocaleTimeString([], {hour: 'numeric', minute:'2-digit'});
                            const isHigh = event.type === 'H';
                            
                            rowsHTML += `
                                <div class="row">
                                    <div>
                                        <span class="pill ${isHigh ? 'pill-high' : 'pill-low'}">${isHigh ? 'HIGH' : 'LOW'} TIDE</span>
                                        <div class="time">${tStr}</div>
                                    </div>
                                    <div class="val">${parseFloat(event.v).toFixed(1)} ft</div>
                                </div>
                            `;
                        });
                    }

                    // Trend Icon
                    const trendIcon = station.current.trend === 'Rising' ? 'üåä RISING' : 'üìâ FALLING';

                    // Card HTML
                    const card = document.createElement('div');
                    card.className = 'card';
                    card.innerHTML = `
                        <div class="card-header">
                            <div>
                                <div class="name">${station.name}</div>
                                <div class="sub">Live Status</div>
                            </div>
                            <div>
                                <div class="hero-num">${station.current.value}<span class="hero-unit">ft</span></div>
                                <div class="trend-tag">${trendIcon}</div>
                            </div>
                        </div>
                        <div>${rowsHTML}</div>
                    `;
                    container.appendChild(card);
                });

            } catch (err) {
                console.error(err);
                container.innerHTML = `<div class="error">System Error: ${err.message}</div>`;
            }
        }

        // Start App
        init();
    </script>
</body>
</html>