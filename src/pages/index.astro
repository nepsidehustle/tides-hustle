---
export const prerender = false;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TideTrack Pro</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-slate-900 p-4 md:p-10 font-sans">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-black italic tracking-tighter mb-8 text-blue-600">TideTrack <span class="text-slate-400">Pro</span></h1>
        <div id="grid" class="grid grid-cols-1 md:grid-cols-2 gap-8"></div>
    </div>

    <script>
        async function init() {
            const res = await fetch('/api/tide-data');
            const data = await res.json();
            const container = document.getElementById('grid');

            data.forEach((station, i) => {
                const card = document.createElement('div');
                card.className = 'border-2 border-slate-100 p-6 rounded-3xl shadow-sm';
                card.innerHTML = `<h2 class="text-2xl font-bold mb-4">${station.name}</h2><div class="h-64"><canvas id="c-${i}"></canvas></div>`;
                container.appendChild(card);

                const labels = station.predictions.map(p => p.t);
                const values = station.predictions.map(p => p.v);
                const high = Math.max(...values);
                const low = Math.min(...values);

                new Chart(document.getElementById(`c-${i}`), {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            data: values,
                            borderColor: '#2563eb', // Nice deep blue
                            borderWidth: 4,
                            tension: 0.4,
                            pointRadius: (ctx) => (values[ctx.dataIndex] === high || values[ctx.dataIndex] === low) ? 8 : 0,
                            pointBackgroundColor: '#2563eb',
                            fill: true,
                            backgroundColor: 'rgba(37, 99, 235, 0.05)'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            x: {
                                ticks: {
                                    maxTicksLimit: 6,
                                    callback: function(val) {
                                        // "Fri 10 AM" style
                                        const label = labels[val];
                                        if (!label) return '';
                                        const [dPart, tPart] = label.split(' ');
                                        const [y, m, d] = dPart.split('-');
                                        const date = new Date(y, m-1, d);
                                        const hour = parseInt(tPart.split(':')[0]);
                                        const ampm = hour >= 12 ? 'PM' : 'AM';
                                        const days = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
                                        return `${days[date.getDay()]} ${hour % 12 || 12}${ampm}`;
                                    }
                                },
                                grid: { display: false }
                            },
                            y: {
                                min: Math.floor(low) - 1,
                                max: Math.ceil(high) + 1,
                                border: { display: false }
                            }
                        }
                    }
                });
            });
        }
        init();
    </script>
</body>
</html>